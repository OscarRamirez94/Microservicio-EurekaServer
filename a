configurations.all {
    resolutionStrategy.eachDependency { details ->
        if (details.requested.group == "org.apache.tomcat.embed") {
            def tomcatModules = [
                "tomcat-embed-core",
                "tomcat-embed-websocket",
                "tomcat-embed-el",
                "tomcat-annotations-api"
            ]
            if (tomcatModules.contains(details.requested.name)) {
                details.useVersion "10.1.49"
            }
        }

        if (details.requested.group == "jakarta.mail" &&
            details.requested.name == "jakarta.mail-api") {
            details.useVersion "2.1.3"
        }
    }
}